<div class="row justify-content-md-center">
  <div class="card-wrapper col-12 col-md-4 mt-5">
    <div class="card">
      <div class="card-body">
        <form action="/planes" method="POST">
          <div class="form-group">
            <label for="_type">Plane Type</label>
            <input
              id="_type"
              class="form-control"
              name="_type"
              required=""
              autofocus=""
            />
          </div>

          <div class="form-group">
            <label for="seats">Seats </label>
            <input id="seats" class="form-control" name="seats" required="" />
          </div>

          <div class="form-group no-margin">
            <input
              class="btn btn-primary btn-block"
              type="submit"
              value="Create"
            />
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
