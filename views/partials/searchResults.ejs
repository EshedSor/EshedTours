
<script type="text/javascript" src="/javascripts/cart.js"></script>
<section class="intro">
    <div class="bg-image h-100" style="background-color: #6095F0;">
        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="card shadow-2-strong" style="background-color: #f5f7fa;">
                            <div class="card-body">
                                <label>Outgoing</label>
                                <div class="table-responsive">
                                    <table class="table table-borderless mb-0">
                                        <thead>
                                            <tr>
                                                <th scope="col">
                                                </th>
                                                <th scope="col">Origin</th>
                                                <th scope="col">Destination</th>
                                                <th scope="col">Departure</th>
                                                <th scope="col">Arrival</th>
                                                <th scope="col">Price</th>
                                                <th scope="col"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(var i=0;i<toFlights.length;i++) {%>
                                                <tr>
                                                    <th scope="row">
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" value=""
                                                                id="flexCheckDefault1" checked />
                                                        </div>
                                                    </th>
                                                    <td>
                                                        <%=toFlights[i].origin.country%>,<%=toFlights[i].origin.city%>,
                                                                <%=toFlights[i].origin.airport%>
                                                    </td>
                                                    <td>
                                                        <%=toFlights[i].destination.country%>,
                                                            <%=toFlights[i].destination.city%>,
                                                                <%=toFlights[i].destination.airport%>
                                                    </td>
                                                    <td>
                                                        <%=toFlights[i].departure%>
                                                    </td>
                                                    <td>
                                                        <%=toFlights[i].arrival%>
                                                    </td>
                                                    <td>
                                                        <%=toFlights[i].price%>
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-success" onclick="addOutboundToCart('<%= toFlights[i]._id %>')">Choose</button>
                                                    </td>
                                                </tr>
                                                <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

