<div class="row justify-content-md-center" id="loginrow">
  <div class="card-wrapper col-12 col-md-4 mt-5">
    <div class="card" id="logincard">
      <div class="card-body">
        <h4 class="card-title">Create new account</h4>
        <form action="/users/<%=user._id %>/edit?_method=PUT" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              required=""
              autofocus=""
              value="<%= user.name %>"
            />
          </div>

          <div class="form-group">
            <label for="surname">Surname</label>
            <input
              type="text"
              class="form-control"
              id="surname"
              name="surname"
              required=""
              autofocus=""
              value="<%= user.surname %>"
            />
          </div>

          <div class="form-group">
            <label for="email">E-Mail Address</label>
            <input
              id="email"
              type="email"
              class="form-control"
              name="email"
              required=""
              value="<%= user.email %>"
            />
          </div>

          <div class="form-group no-margin">
            <input
              type="submit"
              class="btn btn-primary btn-block"
              value="Update"
            />
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
